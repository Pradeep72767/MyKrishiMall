<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity">


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please confirm your order"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/shipment_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:hint="Your Name"
        android:layout_marginRight="20dp"

        />

    <EditText
        android:id="@+id/shipment_customer_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_customer_name"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:hint="Your Number"
        android:layout_marginRight="20dp"

        />

    <EditText
        android:id="@+id/shipment_customer_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_customer_phone"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:hint="Your Address"
        android:layout_marginRight="20dp"

        />

    <EditText
        android:id="@+id/shipment_customer_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_customer_address"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:hint="Your city"
        android:layout_marginRight="20dp"

        />

    <TextView
        android:id="@+id/txt_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="Total Amount"
        android:textSize="20dp"
        android:textStyle="bold"

        android:layout_above="@+id/confirm_final_button"
        />

    <TextView
        android:id="@+id/txt_total_amount_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120dp"
        android:layout_above="@+id/confirm_final_button"
        />

    <Button
        android:id="@+id/confirm_final_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirm"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:textSize="20dp"


        />



</RelativeLayout>