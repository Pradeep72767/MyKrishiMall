<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminMaintainProductActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"

            />

        <EditText
            android:id="@+id/maintain_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product name"
            android:layout_below="@+id/maintain_product_image"
            android:background="@drawable/input_design"

            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:layout_below="@+id/maintain_product_name"
            android:background="@drawable/input_design"

            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/maintain_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Description"
            android:layout_below="@+id/maintain_product_price"
            android:background="@drawable/input_design"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            />


        <Button
            android:id="@+id/maintain_product_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Changes"
            android:layout_below="@+id/maintain_product_description"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>