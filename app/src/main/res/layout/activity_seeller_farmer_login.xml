<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seellerFarmerLoginActivity">

    <com.rey.material.widget.ImageView
        android:id="@+id/farmer_login_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/farmerlogin2"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer Login"
        android:gravity="center"
        android:layout_below="@+id/farmer_login_image"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/holo_green_dark"
        />

    <EditText
        android:id="@+id/selle_farmer_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/login_text"
        android:inputType="textEmailAddress"
        android:textSize="17dp"
        android:hint="E-mail..."
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/seller_farmer_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/selle_farmer_login_email"
        android:inputType="numberPassword"
        android:textSize="17dp"
        android:hint="Password..."
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/seller_farmer_login_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/seller_farmer_login_password"
        android:background="@android:color/holo_green_light"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

</RelativeLayout>