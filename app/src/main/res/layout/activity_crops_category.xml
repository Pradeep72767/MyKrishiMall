<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CropsCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add Crops"
        android:textSize="35sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear_category_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="left"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/slogan_category"




        >

        <com.rey.material.widget.ImageView
            android:id="@+id/vegetables_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/veg_icon"></com.rey.material.widget.ImageView>


        <TextView
            android:id="@+id/veg_textview"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="end"
            android:layout_marginLeft="90dp"

            android:layout_marginTop="25dp"
            android:text="vegetables"

            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="left"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linear_category_layout1"




        >

        <com.rey.material.widget.ImageView
            android:id="@+id/grains_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/grains_icon"
            android:layout_gravity="left"
            />

        <TextView
            android:id="@+id/grains_textview"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="end"
            android:text="Grains"

            android:layout_marginLeft="90dp"
            android:layout_marginTop="25dp"

            android:textSize="25sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="left"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linear_category_layout2"




        >

        <com.rey.material.widget.ImageView
            android:id="@+id/fruit_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/fruits_icon"
            android:layout_gravity="left"
            ></com.rey.material.widget.ImageView>


        <TextView
            android:id="@+id/fruits_textview"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="end"
            android:text="Fruits"

            android:layout_marginLeft="90dp"
            android:layout_marginTop="25dp"

            android:textSize="25sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <com.rey.material.widget.Button
        android:id="@+id/maintain_product_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text = "Maintain Products"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:layout_above="@+id/cehck_order_btn"

        />


    <com.rey.material.widget.Button
        android:id="@+id/farmer_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Logout"
        android:textSize="20dp"

        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:textAllCaps="false"


        />

    <com.rey.material.widget.Button
        android:id="@+id/cehck_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Check New Orders"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:layout_above="@+id/farmer_logout_btn"

        />





</RelativeLayout>