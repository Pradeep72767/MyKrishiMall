<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sellerFarmerRegisterActivity">
    
    <com.rey.material.widget.ImageView
        android:id="@+id/farmer_registration_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/farmerregister"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/registration_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer Registration"
        android:gravity="center"
        android:layout_below="@+id/farmer_registration_image"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/holo_green_dark"
        />

    <EditText
        android:id="@+id/selle_farmer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/registration_text"
        android:inputType="text"
        android:textSize="17dp"
        android:hint="Name..."
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/seller_farmer_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/selle_farmer_name"
        android:inputType="number"
        android:textSize="17dp"
        android:hint="Mobile Number..."
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/seller_farmer_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/seller_farmer_number"
        android:inputType="textEmailAddress"
        android:textSize="17dp"
        android:hint="E-mail..."
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/seller_farmer_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/seller_farmer_email"
        android:inputType="numberPassword"
        android:textSize="17dp"
        android:hint="Password..."
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/seller_farmer_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/seller_farmer_password"
        android:inputType="textMultiLine"
        android:textSize="17dp"
        android:hint="Address..."
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/seller_farmer_register_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/seller_farmer_address"
        android:background="@android:color/holo_green_light"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/seller_farmer_alreadyHaveAcc_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/seller_farmer_register_Btn"
        android:background="@android:color/holo_green_light"
        android:text="Already have account !"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

</RelativeLayout>